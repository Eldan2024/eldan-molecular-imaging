<!-- DISABLED -->
<!-- Contact form alert -->
<div class="px-5 text-center">
  <% flash.each do |key, message| %>
    <p class="alert alert-<%= key %>"><%= message %></p>
  <% end %>
</div>

<div class="pt-4">

  <!-- Breadcrumb -->
  <%= render 'shared/breadcrumb' %>

    <!-- Hero -->
    <section class="position-relative d-flex align-items-center pt-lg-5">
      <div class="container position-relative">
        <div class="row pt-md-2 pb-2 pb-md-4 ">

        <!-- Contact Info -->
        <div class="col-12 pt-3 mt-3 text-center">
          <h2 class="display-1 text-gradient-primary pb-sm-2 pb-md-3 mb-3">Let's talk!</h2>
          <div class="nav d-block lead">
            <div class="text-nav">Ziv Gilboa</div>
            <div class="text-nav" style="font-size: 15px;">International Business Manager</div>
            <a href="mailto:bareketg@eldan.biz" class="fw-normal text-muted text-decoration-underline p-0 mb-2">ZivG@eldan.biz</a>
          </div>
        </div>
      </div>
    </section>

    <!-- DISABLED -->
    <!-- Contact Form -->
    <div class="d-none col-lg-6 offset-xl-1 offset-xxl-2 pt-3 pt-md-4 pt-lg-3 mt-3">
      <%= form_for @contact, html: { class:"needs-validation", novalidate:true } do |f| %>
        <div class="row g-4">
          <div class="col-sm-6">
            <label for="fn" class="form-label fs-base">Full name</label>
            <div class="input-group">
              <span class="input-group-text">
                <i class='bx bx-rename' ></i>
              </span>
              <%= f.text_field  :name, required: true, class: "contact-form-text-area form-control form-control-lg", autocomplete:"name", placeholder:"John Doe", id:"fn" %>
              <div class="invalid-feedback">Please enter your full name!</div>
            </div>
          </div>
          <div class="col-sm-6">
            <label for="email" class="form-label fs-base">Email</label>
            <div class="input-group">
              <span class="input-group-text">
                <i class='bx bx-envelope'></i>
              </span>
              <%= f.email_field :email, required: true, class: "contact-form-text-area form-control form-control-lg", autocomplete:"email", placeholder:"john.doe@gmail.com", id:"email" %>
              <div class="invalid-feedback">Please provide a valid email address!</div>
            </div>
          </div>
          <div class="col-sm-12">
            <label for="subject" class="form-label fs-base">Subject</label>
            <div class="input-group">
              <span class="input-group-text">
                <i class='bx bx-book' ></i>
              </span>
              <%= f.text_field  :subject, required: true, class: "contact-form-text-area form-control form-control-lg", id:"subject", placeholder:"Write your subject here...", id:"subject", value:@via %>
              <button class="btn btn-primary dropdown-toggle" type="button" data-bs-toggle="dropdown"><span class="d-none d-md-block">Choose a subject</span></button>
              <div class="invalid-feedback">Please provide a valid subject!</div>
              <div class="dropdown-menu my-1">
                <div class="d-lg-flex pt-lg-3">
                  <div class="mega-dropdown-column">
                    <h6 class="px-3 mb-2">Products</h6>
                    <ul class="list-unstyled mb-3">
                      <li><a class="dropdown-item" href="#" onclick="changeInputText(this.innerText)"><sup>99</sup>Mo/<sup>99m</sup>Tc Generator</a></li>
                      <li><a class="dropdown-item" href="#" onclick="changeInputText(this.innerText)">Thallium Chloride (<sup>201</sup>Tl) injection</a></li>
                      <li><a class="dropdown-item" href="#" onclick="changeInputText(this.innerText)">Gallium citrate (<sup>67</sup>Ga) injection</a></li>
                    </ul>
                  </div>
                  <div class="mega-dropdown-column">
                    <h6 class="px-3 mb-2">About</h6>
                    <ul class="list-unstyled mb-3">
                      <li><a class="dropdown-item" href="#" onclick="changeInputText(this.innerText)">Eldan Molecular Imaging</a></li>
                      <li><a class="dropdown-item" href="#" onclick="changeInputText(this.innerText)">Eldan Electronic Instruments Ltd.</a></li>
                      <li><a class="dropdown-item" href="#" onclick="changeInputText(this.innerText)">Neopharm Group</a></li>
                    </ul>
                  </div>
                  <div class="mega-dropdown-column">
                    <h6 class="px-3 mb-2">Distribution</h6>
                    <ul class="list-unstyled">
                      <li><a class="dropdown-item" href="#" onclick="changeInputText(this.innerText)">Isorad</a></li>
                    </ul>
                  </div>
                </div>
              </div>
            </div>
          </div>
          <div class="col-12 pb-2">
            <label for="message" class="form-label fs-base">Message</label>
            <div class="input-group">
              <span class="input-group-text">
                <i class="bx bx-message fs-lg" role="none"></i>
              </span>
              <%= f.text_area :message, rows: 3, required: true, class: "contact-form-text-area form-control form-control-lg", placeholder:"Write your message here...", id:"message" %>
              <div class="invalid-feedback">Please provide a valid message!</div>
            </div>
          </div>
          <div class="d-none">
            <%= f.label :nickname %>
            <%= f.text_field :nickname, :hint => 'Leave this field blank!' %>
          </div>
          <div class="col-12">
            <%= recaptcha_tags %>
          </div>
          <div class="col-12">
            <%= f.submit 'Send Message', class: 'btn btn-lg btn-primary w-100 w-sm-auto' %>
          </div>
        </div>
      <% end %>
    </div>

  </div>
</div>

<script>
  function changeInputText(value){
    document.getElementById('subject').value = value;
  }
</script>