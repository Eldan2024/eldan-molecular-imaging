<div>
  <div class="jarallax d-none d-sm-block mb-4" data-jarallax data-speed="0.6">
    <span class="position-absolute top-0 start-0 w-100 h-100 bg-gradient-primary-translucent"></span>
    <div class="jarallax-img" style="background-image: url(<%= asset_path(@jarallax) %>);"></div>
    <div style="height: 200px;"></div>
  </div>

  <!-- Breadcrumb -->
  <%= render 'shared/breadcrumb' %>

  <!-- About -->
  <section class="container text-center text-sm-start mt-4">
    <h1 class="d-inline border-bottom"><%= @title.split(' / ').first %></h1>
    <div class="mt-3 mx-3 d-block col-md-9 col-lg-7 pb-5">
      <%= yield %>
    </div>
  </section>
</div>