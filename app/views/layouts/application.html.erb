<% if !defined?(@desc) %>
  <% @desc = "Eldan Molecular Imaging is a young solid division, focused on supporting patients and physicians, by providing them with the highest-level products needed for diagnostic imaging & Nuclear Medicines procedures" %>
<% end %>

<% if defined?(@title) %>
  <% @title = @title + " / EldanMI" %>
<% else %>
  <% @title = "EldanMI" %>
<% end %>

<!DOCTYPE html>
<html lang="en">
  <head>

    <!-- Google tag (gtag.js) -->
    <script async src="https://www.googletagmanager.com/gtag/js?id=G-74Q234CRMB"></script>
    <script>
      window.dataLayer = window.dataLayer || [];
      function gtag(){dataLayer.push(arguments);}
      gtag('js', new Date());

      gtag('config', 'G-74Q234CRMB');
    </script>

    <meta charset="UTF-8">
    <title><%= @title %></title>

    <!-- SEO Meta Tags-->
    <meta name="description" content="<%= @desc %>">
    <meta name="keywords" content="radiopharmaceuticals, nuclear medicines, nulecular imaging, radiopharma, technetium, tc99, thallium, gallium, radiopharmacy, generators, isorad, curium, polatom, GE, GBQ, curie, MCI">
    <meta name="author" content="Gelbhart Innovations">

    <!-- Viewport-->
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">

    <!-- Favicon and Touch Icons-->
    <link rel="icon" type="image/png" sizes="32x32" href="<%= asset_path("favicon-32x32.png") %>">
    <link rel="icon" type="image/png" sizes="16x16" href="<%= asset_path("favicon-16x16.png") %>">
    <link rel="manifest" href="<%= asset_path("site.webmanifest") %>">
    <link rel="shortcut icon" href="<%= asset_path("favicon.ico") %>">
    <meta name="msapplication-TileColor" content="#080032">
    <meta name="theme-color" content="#ffffff">

    <!-- Vendor Styles -->
    <link rel="stylesheet" media="screen" href="<%= asset_path("boxicons.min.css") %>" async defer/>
    <link rel="stylesheet" media="screen" href="<%= asset_path("swiper-bundle.min.css") %>" async defer/>
    <link rel="stylesheet" media="screen" href="<%= asset_path("lightgallery-bundle.min.css") %>" async defer/>

    <!-- Main Theme Styles + Bootstrap -->
    <link rel="stylesheet" media="screen" href="<%= asset_path("theme.css") %>">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    
    <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>
    <%= javascript_importmap_tags %>

    <!-- Theme mode -->
    <script>
      let mode = window.localStorage.getItem('mode'),
          root = document.getElementsByTagName('html')[0];
      if (mode !== null && mode === 'dark') {
        root.classList.add('dark-mode');
      } else {
        root.classList.remove('dark-mode');
      }
    </script>

    <!-- Page loading script -->
    <script>
      (function () {
        window.onload = function () {
          const preloader = document.querySelector('.page-loading');
          preloader.classList.remove('active');
          setTimeout(function () {
            preloader.remove();
          }, 1000);
        };
      })();
    </script>
  </head>

  <!-- Body -->
  <body>

    <!-- Page loading spinner -->
    <div class="page-loading active">
      <div class="page-loading-inner">
        <div class="page-spinner"></div><span>Loading...</span>
      </div>
    </div>

    <!-- Page wrapper for sticky footer -->
    <!-- Wraps everything except footer to push footer to the bottom of the page if there is little content -->
    <main class="page-wrapper min-vh-100 <%= 'bg-faded-primary' if controller.controller_name == "contacts" %>">

      <% if controller.controller_name != "errors" %>
        <%= render 'shared/header' %>
      <% end %>

      <% if controller.controller_name == "about" %>
        <%= render 'layouts/about' %>
      <% elsif controller.controller_name == "products" %>
        <%= render 'layouts/products' %>
      <% elsif controller.controller_name == "documents" %>
        <%= render 'layouts/documents' %>
      <% elsif controller.controller_name == "news" && !current_page?(news_path) %>
        <%= render 'layouts/news' %>
      <% elsif controller.controller_name == "errors" %>
        <%= render 'layouts/error' %>
      <% else %>
        <%= yield %>
      <% end %>

    </main>

    <%= render 'shared/footer' %>

    <!-- Back to top button -->
    <a href="#top" class="btn-scroll-top" data-scroll role="button" target="_blank">
      <span class="btn-scroll-top-tooltip text-muted fs-sm me-2">Top</span>
      <i class="btn-scroll-top-icon bx bx-chevron-up" role="none"></i>
    </a>

    <!-- Vendor Scripts -->
    <% if controller.controller_name == "errors" %>
      <script src="<%= asset_path("lottie-player.js") %>"></script>
    <% end %>
    <script src="<%= asset_path("bootstrap.bundle.min.js") %>" async defer></script>
    <script src="<%= asset_path("smooth-scroll.polyfills.min.js") %>" async defer></script>
    <script src="<%= asset_path("cleave.min.js") %>" async defer></script>
    <script src="<%= asset_path("jarallax.min.js") %>" async defer></script>
    <script src="<%= asset_path("parallax.min.js") %>" async defer></script>
    <script src="<%= asset_path("swiper-bundle.min.js") %>" async defer></script>
    <script src="<%= asset_path("lightgallery.min.js") %>" async defer></script>
    <script src="<%= asset_path("lg-fullscreen.min.js") %>" async defer></script>
    <script src="<%= asset_path("lg-zoom.min.js") %>" async defer></script>
    <script src="<%= asset_path("lg-video.min.js") %>" async defer></script>
    <script src="<%= asset_path("lg-thumbnail.min.js") %>" async defer></script>
    <script src="<%= asset_path("rellax.min.js") %>" async defer></script>
    <script src="https://polyfill.io/v3/polyfill.min.js?features=default" async defer></script>
    <script src="https://ajax.googleapis.com/ajax/libs/handlebars/4.7.7/handlebars.min.js" async defer></script>
    <script src="https://maps.googleapis.com/maps/api/js?key=<%= ENV['GOOGLE_MAPS_API_KEY'] %>&callback=initMap" async defer></script>

    <!-- Main Theme Script -->
    <script src="<%= asset_path("theme.min.js") %>"></script>

    <!-- Accessability Widget -->
    <script async defer>(function(){var s = document.createElement("script");s.setAttribute("data-account","kY4u8WUSMk");s.setAttribute("src","https://cdn.userway.org/widget.js");document.body.appendChild(s);})();</script>
  </body>
</html>