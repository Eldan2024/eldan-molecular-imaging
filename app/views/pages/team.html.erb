<style>
   .card .position-relative {
    cursor: pointer;
  }
</style>

<div class="jarallax d-none d-md-block mb-4" data-jarallax data-speed="0.35">
  <span class="position-absolute top-0 start-0 w-100 h-100 bg-gradient-primary-translucent"></span>
  <div class="jarallax-img" style="background-image: url(<%= asset_path(@jarallax) %>);"></div>
  <div class="d-none d-md-block" style="height: 200px;"></div>
</div>

<!-- Breadcrumb -->
<%= render 'shared/breadcrumb' %>

<!-- Brands (Carousel) -->
<section class="container py-3 pb-lg-5 mb-3 px-5">
  <h2 class="text-center pb-md-2">Our leadership</h2>
  <div class="swiper mx-n2" data-swiper-options='{
    "centerInsufficientSlides": true,
    "slidesPerView": 2,
    "spaceBetween": 20,
    "pagination": {
      "el": ".swiper-pagination",
      "clickable": true
    },
    "breakpoints": {
      "500": {
        "slidesPerView": 3,
        "spaceBetween": 40
      },
      "650": {
        "slidesPerView": 4,
        "spaceBetween": 40
      },
      "900": {
        "slidesPerView": 6,
        "spaceBetween": 40
      },
      "1100": {
        "slidesPerView": 6,
        "spaceBetween": 40
      }
    }
  }'>
    <div class="swiper-wrapper">

      <!-- Team Members -->
      <% for member in @members do %>
        <div class="swiper-slide py-3 card border-0 bg-transparent">
          <div class="position-relative card-hover" data-bs-toggle="modal" data-bs-target="#<%= member[0].split(' ').second %>">
            <img src="<%= asset_path(member[0].split[1].downcase) %>" class="rounded-3" alt="<%= member[0] %>">
            <div class="card-img-overlay d-flex flex-column align-items-center justify-content-center rounded-3" data-bs-toggle="tooltip" data-bs-placement="top" title="Click me for more info!">
              <span class="position-absolute top-0 start-0 w-100 h-100 bg-dark opacity-50 rounded-3"></span>
            </div>
          </div>
          <div class="card-body text-center p-3">
            <h3 class="fs-lg fw-semibold pt-1 mb-2 text-nowrap"><%= member[0] %></h3>
            <p class="fs-sm mb-0"><%= member[1] %></p>
          </div>
        </div>
      <% end %>

    </div>
    <!-- Pagination (bullets) -->
    <div class="swiper-pagination position-relative pt-2 mt-4"></div>
  </div>

  <!-- Team Modals -->
  <% for member in @members do %>
    <div class="modal fade" id="<%= member[0].split(' ').second %>" tabindex="-1" role="dialog">
      <div class="modal-dialog" role="document">
        <div class="modal-content">
          <div class="modal-header row">
            <div class="col-6 text-start">
              <h5 class="modal-title"><%= member[0] %></h5>
              <p class="fs-sm mb-0"><%= member[1] %></p>
            </div>
            <div class="col-6 text-end">
              <img src="<%= asset_path(member[0].split[1].downcase) %>" class="rounded-3" alt="<%= member[0] %>" width="100">
            </div>
          </div>
          <div class="modal-body"><p><%= member[2] %></p></div>
        </div>
      </div>
    </div>
  <% end %>

</section>