<style>
  /* Galaxy Fold */
  @media (min-width: 280px) and (max-width: 320px) {
    header .form-check {
      display: none !important;
    }
  }
  
  @media only screen and (max-width: 353px) {
    header .form-check {
      display: none !important;
    }
  }
</style>

<!-- Navbar -->
<!-- Remove "navbar-sticky" class to make navigation bar scrollable with the page -->
<header class="header navbar navbar-expand-lg navbar-sticky d-flex flex-column shadow-sm bg-light <%= 'position-absolute' if current_page?(root_path) %>">
  <div class="container">
    <a class="d-block d-flex align-items-center navbar-brand me-lg-5" href="<%= root_path %>" >
      <%= image_pack_tag 'logos/logo_dark.png', class: 'light-mode-img', size: '150x109', alt: 'EldanMI dark logo' %>
      <%= image_pack_tag 'logos/logo_light.png', class: 'dark-mode-img', size: '150x109', alt: 'EldanMI light logo' %>
    </a>
    <div id="navbarNav" class="offcanvas offcanvas-end">
      <div class="offcanvas-header border-bottom">
        <h5 class="offcanvas-title">Menu</h5>
        <button type="button" class="btn-close" data-bs-dismiss="offcanvas" aria-label="Close"></button>
      </div>
      <div class="offcanvas-body">
        <ul class="navbar-nav">
          <li class="nav-item dropdown">
            <a href="#" class="nav-link dropdown-toggle <%= "active" if controller.controller_name == 'about' %>" data-bs-toggle="dropdown" role="button">About Us</a>
            <div class="dropdown-menu">
              <div class="d-flex">
                <div class="mega-dropdown-column w-100">
                  <ul class="list-unstyled">
                    <li><a href="<%= about_molecular_imaging_path %>" class="dropdown-item <%= active?(about_molecular_imaging_path) %>">Eldan Molecular Imaging</a></li>
                    <li><a href="<%= about_eldan_path %>" class="dropdown-item <%= active?(about_eldan_path) %>">Eldan Electronic Instruments Ltd.</a></li>
                    <li><a href="<%= about_neopharm_group_path %>" class="dropdown-item <%= active?(about_neopharm_group_path) %>">Neopharm Group</a></li>
                  </ul>
                </div>
              </div>
            </div>
          </li>
          <li class="nav-item dropdown">
            <a href="#" class="nav-link dropdown-toggle <%= "active" if controller.controller_name == 'products' %>" data-bs-toggle="dropdown" role="button">Products</a>
            <div class="dropdown-menu">
              <div class="d-flex">
                <div class="mega-dropdown-column">
                  <ul class="list-unstyled">
                    <li><a href="<%= products_tc99_path %>" class="dropdown-item <%= active?(products_tc99_path) %>"><sup>99</sup>Mo/<sup>99m</sup>Tc Generator</a></li>
                    <li><a href="<%= products_tl201_path %>" class="dropdown-item <%= active?(products_tl201_path) %>">Thallium Chloride (<sup>201</sup>Tl)</a></li>
                    <li><a href="<%= products_ga67_path %>" class="dropdown-item <%= active?(products_ga67_path) %>">Gallium citrate (<sup>67</sup>Ga)</a></li>
                  </ul>
                </div>
              </div>
            </div>
          </li>
          <li class="nav-item">
            <a href="<%= team_path %>" class="nav-link <%= active?(team_path) %>">Team</a>
          </li>
          <li class="nav-item">
            <a href="<%= distribution_path %>" class="nav-link <%= active?(distribution_path) %>">Distribution</a>
          </li>
          <li class="nav-item">
            <a href="<%= news_path %>" class="nav-link <%= "active" if controller.controller_name == 'news' %>">News</a>
          </li>
          <li class="nav-item">
            <a href="<%= contacts_path %>" class="nav-link <%= active?(contacts_path) %>">Contact Us</a>
          </li>
        </ul>
      </div>
    </div>
    <div class="form-check form-switch mode-switch pe-lg-1 ms-auto me-4" data-bs-toggle="mode">
      <input type="checkbox" class="form-check-input" id="theme-mode">
      <label class="form-check-label d-none d-sm-block" for="theme-mode"><i class="bx bx-bulb" aria-label="Light Mode"><span class="d-none">Light Mode</span></i></label>
      <label class="form-check-label d-none d-sm-block" for="theme-mode"><i class="bx bxs-bulb" aria-label="Dark Mode"><span class="d-none">Dark Mode</span></i></label>
    </div>
    <button type="button" class="navbar-toggler ms-4" data-bs-toggle="offcanvas" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>
  </div>
</header>