<style>
  /* Galaxy Fold */
  @media (min-width: 280px) and (max-width: 320px) {
    header .form-check {
      display: none !important;
    }
  }
</style>

<!-- Navbar -->
<!-- Remove "navbar-sticky" class to make navigation bar scrollable with the page -->
<header class="header navbar navbar-expand-lg navbar-sticky d-flex flex-column shadow-sm <%= 'position-absolute' if current_page?(root_path) %>">
  <div class="container">
    <a class="d-block d-flex align-items-center navbar-brand me-lg-5" href="<%= root_path %>" >
      <img class="light-mode-img" src="<%= asset_path("logo_dark") %>" alt="EldanMI dark logo" width="150">
      <img class="dark-mode-img" src="<%= asset_path("logo_light") %>" alt="EldanMI light logo" width="150">
    </a>
    <div id="navbarNav" class="offcanvas offcanvas-end">
      <div class="offcanvas-header border-bottom">
        <h5 class="offcanvas-title">Menu</h5>
        <button type="button" class="btn-close" data-bs-dismiss="offcanvas" aria-label="Close"></button>
      </div>
      <div class="offcanvas-body">
        <ul class="navbar-nav">
          <li class="nav-item dropdown">
            <a href="#" class="nav-link dropdown-toggle <%= "active" if controller.controller_name == 'about' %>" data-bs-toggle="dropdown" role="button">About Us</a>
            <div class="dropdown-menu">
              <div class="d-flex">
                <div class="mega-dropdown-column">
                  <ul class="list-unstyled">
                    <li><a href="<%= about_molecular_imaging_path %>" class="dropdown-item <%= is_active(about_molecular_imaging_path) %>">Eldan Molecular Imaging</a></li>
                    <li><a href="<%= about_eldan_path %>" class="dropdown-item <%= is_active(about_eldan_path) %>">Eldan</a></li>
                    <li><a href="<%= about_neopharm_group_path %>" class="dropdown-item <%= is_active(about_neopharm_group_path) %>">Neopharm Group</a></li>
                  </ul>
                </div>
              </div>
            </div>
          </li>
          <li class="nav-item dropdown">
            <a href="#" class="nav-link dropdown-toggle <%= "active" if controller.controller_name == 'products' %>" data-bs-toggle="dropdown" role="button">Products</a>
            <div class="dropdown-menu">
              <div class="d-flex">
                <div class="mega-dropdown-column">
                  <ul class="list-unstyled">
                    <li><a href="<%= products_tc99_path %>" class="dropdown-item <%= is_active(products_tc99_path) %>"><sup>99</sup>Mo/<sup>99m</sup>Tc Generator</a></li>
                    <li><a href="<%= products_ti201_path %>" class="dropdown-item <%= is_active(products_ti201_path) %>">Thallium Chloride (<sup>201</sup>TI)</a></li>
                    <li><a href="<%= products_ga67_path %>" class="dropdown-item <%= is_active(products_ga67_path) %>">Gallium citrate (Ga-67)</a></li>
                  </ul>
                </div>
              </div>
            </div>
          </li>
          <li class="nav-item">
            <a href="<%= team_path %>" class="nav-link <%= is_active(team_path) %>">Team</a>
          </li>
          <li class="nav-item">
            <a href="<%= distribution_path %>" class="nav-link <%= is_active(distribution_path) %>">Distribution</a>
          </li>
          <li class="nav-item">
            <a href="<%= news_path %>" class="nav-link <%= "active" if controller.controller_name == 'news' %>"">News</a>
          </li>
          <li class="nav-item">
            <a href="<%= contacts_path %>" class="nav-link <%= is_active(contacts_path) %>">Contact Us</a>
          </li>
        </ul>
      </div>
    </div>
    <div class="form-check form-switch mode-switch ms-auto " data-bs-toggle="mode">
      <input name="theme" type="checkbox" class="form-check-input" id="theme-mode">
      <label class="form-check-label" for="theme-mode" aria-labelledby="theme"><i class="bx bx-bulb" role="theme" aria-label="Light Mode"></i></label>
      <label class="form-check-label" for="theme-mode" aria-labelledby="theme"><i class="bx bxs-bulb" role="theme" aria-label="Dark Mode"></i></label>
    </div>
    <button type="button" class="navbar-toggler ms-4" data-bs-toggle="offcanvas" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>
  </div>
</header>